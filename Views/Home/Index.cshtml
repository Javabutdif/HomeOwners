@{
    ViewData["Title"] = "Home Page";
}

<style>
    :root {
        --brown: #8B4513; /* Dark Brown */
        --light-brown: #A0522D; /* Light Brown */
        --dark-brown: #654321; /* Darker Brown */
        --beige: #F5F5DC; /* Beige */
        --primary: var(--brown); /* Set primary color to brown */
        --secondary: var(--light-brown); /* Set secondary color to light brown */
    }

    /* Additional custom styles for brown theme */
    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
    }

    .btn-outline-primary {
        color: var(--primary);
        border-color: var(--primary);
    }

        .btn-outline-primary:hover {
            background-color: var(--primary);
            color: white;
        }

    .text-primary {
        color: var(--primary) !important;
    }

    .bg-primary {
        background-color: var(--primary) !important;
    }

    .feature-icon.bg-primary {
        background-color: var(--primary) !important;
    }

    /* Center icons in feature boxes */
    .feature-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin: 0 auto; /* Center the icon */
    }

    /* Hover effect for cards */
    .hover-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    /* Image enhancements */
    .image-container {
        position: relative;
        overflow: hidden;
        border-radius: 16px; /* Rounded corners */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2); /* Subtle shadow */
    }

        .image-container img {
            width: 100%;
            height: auto;
            transition: transform 0.5s ease; /* Smooth hover effect */
        }

        .image-container:hover img {
            transform: scale(1.05); /* Slight zoom on hover */
        }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(139, 69, 19, 0.1) 0%, rgba(101, 67, 33, 0.05) 100%); /* Subtle gradient overlay */
        border-radius: 16px; /* Match container's rounded corners */
    }

    /* Testimonials Section */
    .testimonial-card {
        background-color: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .testimonial-card img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 1rem;
        }

        .testimonial-card h5 {
            font-size: 1.25rem;
            font-weight: bold;
            color: var(--primary);
        }

        .testimonial-card p {
            font-size: 0.95rem;
            color: #666;
        }

    /* Pricing Section */
    .pricing-card {
        background-color: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .pricing-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .pricing-card h3 {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--primary);
        }

        .pricing-card .price {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--primary);
            margin: 1rem 0;
        }

        .pricing-card ul {
            list-style: none;
            padding: 0;
            margin: 1rem 0;
        }

            .pricing-card ul li {
                margin: 0.5rem 0;
                color: #666;
            }

    /* Footer */
    .footer {
        background-color: var(--dark-brown);
        color: white;
        padding: 2rem 0;
    }

        .footer a {
            color: var(--beige);
            text-decoration: none;
        }

            .footer a:hover {
                text-decoration: underline;
            }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .image-container {
            margin-top: 2rem; /* Add margin on small screens */
        }

        .display-3 {
            font-size: 2.5rem; /* Smaller font size for mobile */
        }

        .lead {
            font-size: 1.1rem; /* Smaller font size for mobile */
        }

        .testimonial-card, .pricing-card {
            margin-bottom: 1.5rem; /* Add spacing between cards on mobile */
        }
    }
</style>

